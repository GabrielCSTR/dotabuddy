{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/**/*.ts",
    "src/**/*.vue",
    "src/main/*.ts",
    "src/main/*.json",
    "src/preload/*",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.vue",
    "src/renderer/src/stores/*.ts",
  ],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "target": "es2020",
    "module": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out",
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    },
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
