{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": ["electron.vite.config.*","src/**/*.ts", "src/**/*.vue", "src/main/*", "src/preload/*", "src/main/dota2-events.json"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "target": "es2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./out",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  }
}
